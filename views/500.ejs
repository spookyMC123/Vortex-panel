<%- include('components/template') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.34.0/min/vs/loader.js"></script>

<main id="content" class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800">
    <div class="container mx-auto px-4 py-6">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
            <div>
                <h1 class="text-2xl font-bold text-white"><%= req.translations.manageInstance %></h1>
                <p class="mt-2 text-gray-400"><%= req.translations.instanceViewDetailText %></p>
            </div>
            <!-- Add any action buttons here if needed -->
        </div>

        <!-- Instance Component -->
        <div class="mb-10">
            <%- include('components/instance') %>
        </div>

        <!-- Error Display Section -->
        <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-6 backdrop-blur-sm">
            <div class="flex items-center gap-3 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h2 class="text-lg font-semibold text-red-400"><%= req.translations.fivezerozeroInstanceError %></h2>
            </div>
            
            <p class="text-gray-200 text-lg mb-3"><%= req.translations.somethingWentWrongThere %></p>
            
            <div class="bg-gray-900 rounded-md p-4 mt-4 overflow-x-auto">
                <p class="text-gray-400 mb-2"><%= req.translations.returnedTextError %></p>
                <code class="text-red-300 font-mono text-sm bg-gray-800 px-2 py-1 rounded">
                    <%= error || req.translations.informationAvailableError %>
                </code>
            </div>

            <!-- Suggested Actions -->
            <div class="mt-6 pt-4 border-t border-gray-700">
                <h3 class="text-sm font-medium text-gray-400 mb-3">Suggested actions:</h3>
                <div class="flex flex-wrap gap-3">
                    <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium transition-colors">
                        Refresh Instance
                    </button>
                    <button class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-md text-sm font-medium transition-colors">
                        View Logs
                    </button>
                    <button class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-md text-sm font-medium transition-colors">
                        Contact Support
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('components/footer') %>

<style>
    /* Smooth transitions for interactive elements */
    button, a {
        transition: all 0.2s ease;
    }
    
    /* Better code block styling */
    code {
        font-family: 'Fira Code', monospace;
        word-break: break-word;
    }
    
    /* Improved scrollbar for code blocks */
    .overflow-x-auto::-webkit-scrollbar {
        height: 6px;
    }
    .overflow-x-auto::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.1);
    }
    .overflow-x-auto::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.2);
        border-radius: 3px;
    }
</style>
